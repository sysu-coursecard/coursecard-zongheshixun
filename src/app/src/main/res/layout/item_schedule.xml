<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_schedule_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_schedule_cv_margin"
    app:cardCornerRadius="@dimen/item_schedule_cv_radius"
    app:contentPadding="@dimen/item_schedule_cv_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_schedule_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/item_schedule_name_default"
            android:textSize="@dimen/item_schedule_name_font"
            android:textColor="@color/item_schedule_name_font"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_schedule_name"
            android:layout_marginTop="@dimen/item_schedule_img_margin_small"
            android:layout_marginStart="@dimen/item_schedule_img_margin"
            android:layout_marginEnd="@dimen/item_schedule_img_margin"
            app:srcCompat="@drawable/schedule" />


    </RelativeLayout>

</android.support.v7.widget.CardView>